<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="140dp"
            android:fontFamily="@font/nexon_lv1_gothic"
            android:text="회원가입"
            android:textColor="#000000"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E8EAED" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E8EAED"
        android:elevation="15dp"
        android:outlineSpotShadowColor="#494949" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="560dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/nexon_lv1_gothic_bold"
                    android:text="아이디"
                    android:textColor="#000000"
                    android:textSize="23dp" />

                <EditText
                    android:id="@+id/edit_id"
                    android:layout_width="230dp"
                    android:layout_height="50dp"
                    android:hint="아이디를 적어주세요" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/nexon_lv1_gothic_bold"
                    android:text="비밀번호"
                    android:textColor="#000000"
                    android:textSize="23dp" />

                <EditText
                    android:id="@+id/edit_pw"
                    android:layout_width="375dp"
                    android:layout_height="50dp"
                    android:hint="아이디를 적어주세요" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/nexon_lv1_gothic_bold"
                    android:text="비밀번호 확인"
                    android:textColor="#000000"
                    android:textSize="23dp" />

                <EditText
                    android:id="@+id/edit_check_pw"
                    android:layout_width="375dp"
                    android:layout_height="50dp"
                    android:hint="아이디를 적어주세요" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/nexon_lv1_gothic_bold"
                    android:text="이메일"
                    android:textColor="#000000"
                    android:textSize="23dp" />

                <EditText
                    android:id="@+id/edit_email"
                    android:layout_width="375dp"
                    android:layout_height="50dp"
                    android:hint="아이디를 적어주세요" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/nexon_lv1_gothic_bold"
                    android:text="주민등록번호"
                    android:textColor="#000000"
                    android:textSize="23dp" />

                <EditText
                    android:id="@+id/edit_re"
                    android:layout_width="375dp"
                    android:layout_height="50dp"
                    android:hint="아이디를 적어주세요" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/nexon_lv1_gothic_bold"
                    android:text="이름(실명)"
                    android:textColor="#000000"
                    android:textSize="23dp" />

                <EditText
                    android:id="@+id/edit_name"
                    android:layout_width="375dp"
                    android:layout_height="50dp"
                    android:hint="아이디를 적어주세요" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/nexon_lv1_gothic_bold"
                    android:text="별명"
                    android:textColor="#000000"
                    android:textSize="23dp" />

                <EditText
                    android:id="@+id/edit_nick_name"
                    android:layout_width="230dp"
                    android:layout_height="50dp"
                    android:hint="아이디를 적어주세요" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/nexon_lv1_gothic_bold"
                    android:text="프로필 사진등록"
                    android:textColor="#000000"
                    android:textSize="23dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_register_photo"
                    android:layout_width="150dp"
                    android:layout_height="42dp"
                    android:background="@drawable/round_box"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="사진선택"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  약관동의"
                    android:textSize="23dp"
                    android:fontFamily="@font/nexon_lv1_gothic_bold"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_signup"
        android:layout_marginTop="15dp"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:background="@drawable/round_box"
        android:text="회원가입"
        android:textColor="#ffffff"
        android:textSize="28dp"
        android:textStyle="bold" />

</LinearLayout>
